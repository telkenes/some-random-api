{
	"compilerOptions": {
		"baseUrl": "./",
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"pretty": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["@types/node", "@types/node-fetch"],
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol"
		],
		"incremental": true,
		"sourceRoot": "src",
		"outDir": "dist",
		"inlineSources": true,
		"inlineSourceMap": true
	},
	"include": [
		"src", "typings"
	],
	"exclude": [
		"node_modules", "dist"
	]
}